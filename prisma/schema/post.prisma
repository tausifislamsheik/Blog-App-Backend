model Post {
  id         String     @id @default(uuid())
  title      String     @db.VarChar(225)
  content    String     @db.Text
  thumbnail  String?
  tags       String[]
  isFeatured Boolean    @default(false)
  status     PostStatus @default(Published)
  views      Int        @default(0)
  authorId   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  comments Comment[]

  @@index([authorId])
  @@map("posts")
}


enum PostStatus {
  Draft
  Published
  Archived
}